<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> occured</h2>
        </div>
    <% end %>

  <div class="field">
    <%= f.label :title %>
    <span class="error-message"><%= @product.errors.full_messages_for(:title).to_sentence %></span>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <span class="error-message"><%= @product.errors.full_messages_for(:description).to_sentence %></span>
    <%= f.text_area(:description, rows: 15) %>
  </div>
  <div class="field">
    <%= f.label :image_url %>
    <span class="error-message"><%= @product.errors.full_messages_for(:image_url).to_sentence %></span>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <span class="error-message"><%= @product.errors.full_messages_for(:price).to_sentence %></span>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit ( f.object.new_record? ? 'Create Book' : 'Update Book' )%>
  </div>
<% end %>
