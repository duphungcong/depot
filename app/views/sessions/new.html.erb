<div class="col">
  <div class="depot_form">
    <h2>Login</h2>
    <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
    <% end %>
    <%= form_tag do %>
        <div class="field">
          <%= label_tag :name, 'Name:' %>
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div class="field">
          <%= label_tag :password, 'Password:' %>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div class="actions">
          <%= submit_tag "Login" %>
        </div>
    <% end %>
  </div>
</div>
